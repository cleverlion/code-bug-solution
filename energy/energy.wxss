/* pages/device/energy/energy.wxml.wxss */
.pageContent {
  background: #fff;
  padding: 30rpx;
  margin: 30rpx;
  font-size: 30rpx;
}
.part {
  display: flex;
  padding: 20rpx 0;
  align-items: top;
  margin-bottom: 20rpx;
}
.energyStatus {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #1195dd;
}
.partTitle {
  margin-right: 20rpx;
  width: 40%;
  text-align: right;
  font-size: 26rpx;

}
.van-radio {
  margin-bottom: 20rpx
}
.saveButton {
  background: #1195dd;
  color: #fff;
  margin-left: 80rpx;
}
button[size=mini] {
  font-size: 15px;
}
.buttonGroup {
  text-align: center;
  margin-top: 30rpx;
}
.partInputTitle {
  margin-right: 20rpx;
  width: 40%;
  text-align: right;
  line-height: 1.4rem;
  font-size: 26rpx;
  white-space: nowrap;
}
.weui-input {
  display: inline-block;
  width: 60%;
  font-size: 26rpx;
  text-align: center;
  border-bottom: 1px solid #eee;

}
.partInputLabel {
  display: inline-block;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 26rpx;
}
.weui-cell_input {
  display: flex;
}
.van-radio__label {
  font-size: 26rpx !important;
}